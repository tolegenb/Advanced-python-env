a = float(input("First number: "))
op = input("Operation: ")
b = float(input("Second number: "))

if op == "+":
    r = a + b
    print(a, op, b, "=", r)
elif op == "-":
    r = a - b
    print(a, op, b, "=", r)
elif op == "*":
    r = a * b
    print(a, op, b, "=", r)
elif op == "/":
    if b != 0:
        r = a / b
        print(a, op, b, "=", r)
    else:
        print("Error")